<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="10dp">

    <ImageView
        android:src="@drawable/ic_close_white_24dp"
        android:layout_gravity="right"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/user"
        android:layout_gravity="center_horizontal"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:text="Tamabah Setoran Hafalan"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Pilih Surah"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/edt_surah_view_surah"
        style="@style/EditTextMain"
        android:entries="@array/surah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Pilih Juz"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/edt_juz_view_surah"
        style="@style/EditTextMain"
        android:entries="@array/juz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Masukkan Ayat"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_ayat_view_surah"
        style="@style/EditTextMain"
        android:hint="3 - 7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbt_add_setoran"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Tambbahkan Setoran"
        android:layout_gravity="center_horizontal"
        app:cornerRadius="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>