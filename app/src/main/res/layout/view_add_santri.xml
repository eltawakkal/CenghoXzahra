<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="10dp">

    <ImageView
        android:src="@drawable/ic_close_white_24dp"
        android:layout_gravity="right"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/user"
        android:layout_gravity="center_horizontal"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:text="Tamabah Data Santri"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Nama Santri"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_nama_view_santri"
        style="@style/EditTextMain"
        android:hint="fulan alfian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Kelas Santri"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_kelas_view_santri"
        style="@style/EditTextMain"
        android:hint="2 MTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="No Absen Santri"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_absen_view_santri"
        style="@style/EditTextMain"
        android:hint="1309298"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbt_add_santri"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Tambbahkan Santri"
        android:layout_gravity="center_horizontal"
        app:cornerRadius="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>